<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.newsclient.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bule"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="广交院实训版">


    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        />
    <RadioGroup
        android:id="@+id/rg_01"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        >
        <RadioButton
            android:id="@+id/rb_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_home_01"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="新闻"
            android:textColor="@drawable/selectorhometab"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/rb_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_02"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="视听"
            android:textColor="@drawable/selectorhometab"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/rb_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_03"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="阅读"
            android:textColor="@drawable/selectorhometab"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/rb_04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_04"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="发现"
            android:textColor="@drawable/selectorhometab"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/rb_05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_05"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="设置"
            android:textColor="@drawable/selectorhometab"
            android:textSize="12sp"/>
    </RadioGroup>


</LinearLayout>
<android.support.design.widget.NavigationView
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:id="@+id/navigation_view"
    android:layout_gravity="left"
    app:menu="@menu/main_option"
    app:headerLayout="@layout/navigation_view_header"
    />

</android.support.v4.widget.DrawerLayout>